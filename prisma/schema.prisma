generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  username String @unique
  password String
  quizzes   Quiz[]
}

model Quiz {
  id          String @id @default(uuid())
  title       String
  description String
  teacherId   String
  teacher     User   @relation(fields: [teacherId], references: [id])
  createdAt   DateTime @default(now())
}
